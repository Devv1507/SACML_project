<div class="container p-5">
    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h4>Registrate</h4>
            </div>
            <div class="card-body">
                <form action="/api/v1/sign-up" method="POST">
                    <div class="mb-3">
                        <input type="text" name="name" class="form-control" placeholder="Nombre" value="{{name}}"
                            autofocus>
                    </div>
                    <div class="mb-3">
                        <input type="text" name="email" class="form-control" placeholder="Correo electrónico"
                            value="{{email}}">
                    </div>
                    <div class="mb-3">
                        <input type="password" name="password" class="form-control" placeholder="Contraseña">
                    </div>
                    <div class="mb-3">
                        <input type="password" name="rePassword" class="form-control" placeholder="Confirmar contraseña">
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-primary w-100"> Guardar </button>
                    </div>
                </form>
                <div class="p-4">
                    <p class="p-center">Ya estas registrado? <a href="/" class="p-center">Ingresa</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>