<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h4>Account Information</h4>
        </div>
        <div class="card-body">
            <form action="/api/v1/home/update/{{target.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="mb-3">
                    <input type="text" name="name" class="form-control" value="{{target.name}}">
                </div>
                <div class="mb-3">
                    <input type="text" name="email" class="form-control" value="{{target.email}}">
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-primary w-100"> Update Account </button>
                </div>
            </form>
        </div>
    </div>
</div>